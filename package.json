{
  "name": "hexo-theme-amorfati",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "preinstall": "cd ../../ && npm install --save-dev hexo-renderer-pug",
    "prepare": "husky install",
    "lint:pug": "pug-lint layout components",
    "lint:js": "eslint --ext \".js,.pug\" --ignore-path .gitignore --ignore-path .prettierignore .",
    "lint:style": "stylelint \"**/*.{css,scss,sass}\"",
    "lint:prettier": "prettier --check . --ignore-path .prettierignore",
    "lint": "yarn lint:js && yarn lint:pug && yarn lint:pug && yarn lint:style && yarn lint:prettier",
    "lintfix": "prettier --write --list-different . && yarn lint:js --fix && yarn lint:style --fix",
    "postinstall": "copy-files-from-to"
  },
  "keywords": [],
  "author": {
    "name": "mulder21c",
    "email": "mulder21c@gmail.com"
  },
  "license": "MIT",
  "lint-staged": {
    "*.pug": "pug-lint",
    "*.{js, pug}": "eslint --cache",
    "*.{css,scss,sass,html}": "stylelint",
    "*.**": "prettier --check --ignore-unknown"
  },
  "copyFiles": [
    {
      "from": "./__CUSTOM__/pug/pug.config.js",
      "to": "../../pug.config.js"
    }
  ],
  "copyFilesSettings": {
    "whenFileExists": "overwrite"
  },
  "browsers": [
    "last 2 versions and > 1% in KR",
    "not ie > 0",
    "not ie_mob > 0"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/eslint-parser": "^7.21.3",
    "@babel/preset-env": "^7.20.2",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@fortawesome/fontawesome-free": "^6.3.0",
    "@hidoo/sassdoc-to-markdown": "^0.8.0",
    "@prettier/plugin-xml": "^2.2.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-multi-entry": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "JSONStream": "^1.3.5",
    "autoprefixer": "^10.4.14",
    "concat-with-sourcemaps": "^1.1.0",
    "copy-files-from-to": "^3.8.0",
    "cssnano": "^5.1.14",
    "easy-uid": "^2.0.2",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-pug": "^1.2.5",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.1",
    "josa": "^3.0.1",
    "js-yaml": "^4.1.0",
    "jsdoc-to-markdown": "^8.0.0",
    "lint-staged": "^13.2.0",
    "lodash": "^4.17.21",
    "lorem-ipsum": "^2.0.8",
    "mkdirp": "^2.1.5",
    "postcss": "^8.4.21",
    "postcss-html": "^1.5.0",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^8.1.0",
    "prettier": "^2.8.7",
    "probe-image-size": "^7.2.3",
    "pug-doc": "^2.23.1",
    "pug-lint": "^2.7.0",
    "rollup": "^3.9.1",
    "sass": "^1.60.0",
    "stylelint": "^15.3.0",
    "stylelint-config-standard": "^31.0.0",
    "sync-fetch": "^0.4.2",
