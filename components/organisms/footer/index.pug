include /components/atoms/ccl-license/index
include /components/atoms/watermark/index

//- @pugdoc
  name: footerContent
  description: footer content
  beforeEach: |
    include /components/utils/util
    include /components/atoms/ccl-license/index
    include /components/atoms/watermark/index
  examples:
    - |
      +footerContent()

mixin footerContent
  - const { prefix } = theme;

  div(
    class= `${prefix}-footer`
  )&attributes(attrs)
    +cclLicense({
      name: config.author,
      license: [`by`, `nc`, `nd`],
    })

    //- do not remove this
    +watermark()
