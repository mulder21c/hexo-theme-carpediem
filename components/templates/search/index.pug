extends /components/templates/common
include /components/atoms/heading/index
include /components/molecules/search-bar/index
include /components/organisms/hero/index

block heroContent
  -
    const searchHero = (primaryHero && primaryHero.path) ? primaryHero : hero;
  if (searchHero)
    +hero({imgSrc: searchHero.path, class: `${prefix}-search__hero`})

block mainContent
  +heading({
    level: 1,
    visible: false,
  })
    = _p("section.search")
  +searchBar({
    textfieldId: `keyword`,
    searchBtnId: `btn-search`,
    id: `search`
  })

  #search-result

  #search-status(
    role= "status"
  )

block sidebar
