//- @pugdoc
  name: menuNavigation
  description: create hexo menu list
  beforeEach: |
    include ../../../utils/util
  arguments:
    - {object} props
    - {object} [props.options] the options for menu list
    - |
      {function} [props.options.transform] <br>
      the function that changes the display of menu name
  examples:
    - |
      +menuNavigation()

mixin menuNavigation(props = {})
  -
    // define types
    const menuNavProps = {
      options: PropTypes.object,
    };

    // verifying props
    validateProps(menuNavProps)(props);

    const { prefix } = theme;

    // merge user-supplied options with the defaults
    const defaultProps = {
      options: {
        class: `${prefix}-menu-nav`
      },
    };

    const {
      options,
      ...attrs
    } = {
      ...defaultProps,
      ...(props || {}),
      options: {
        ...defaultProps.options,
        ...(props?.options || {}),
      }
    };

  nav(
    class= options.class
    aria-label= `menu`
  )&attributes(attrs)
    | !{listMenus(options)}
