//- @pugdoc
  name: button
  description: basic button component
  beforeEach: |
    include ../../utils/util
  arguments:
    - {object} props
    - {string} [props.type] ['button'] the value of type attribute for button
    - |
      {string} [props.size] ['medium'] size of button
      <br> one of `'small'`, `'medium'`, `'large'`, `'fluid'`
    - |
      {string} [props.appearance] ['fill'] appearance of button
      <br> one of `'fill'`, `'outline'`
  examples:
    - |
      +button({
        type: 'button',
        size: 'medium',
        appearance: 'outline',
      }) button

mixin button(props = {})
  -
    // define types
    const btnProps = {
      type: PropTypes.oneOf([
        `button`,
        `submit`,
        `reset`,
      ]),
      size: PropTypes.oneOf([
        `small`,
        `medium`,
        `large`,
        `fluid`,
      ]),
      appearance: PropTypes.oneOf([
        `fill`,
        `outline`,
      ]),
    };

    // verifying props
    validateProps(btnProps)(props);

    // merge user-supplied options with the defaults
    const defaultProps = {
      type: `button`,
      size: `medium`,
      appearance: `default`,
    };

    const {
      type,
      size,
      appearance,
      ...attrs
    } = {
      ...defaultProps,
      ...props,
    };

    const { prefix } = theme;
    const className = [
      `${prefix}-btn-basic`,
      size ? { [`${prefix}-btn-basic--${size}`]: size } : ``,
      appearance ? { [`${prefix}-btn-basic--${appearance}`]: appearance } : ``,
    ];

  button(
    type= type
    class= className
  )&attributes(attrs)
    block
