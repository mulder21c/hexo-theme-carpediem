//- @pugdoc
  name: watermark
  description: watermark for theme
  beforeEach: |
    include ../../utils/util
  arguments:
    - {object} props
    - |
      {boolean} [props.hexo=true] whether to display tool for generating as hexo
  examples:
    - |
      +watermark()

mixin watermark(props)
  -
    const watermarkProps = {
      hexo: PropTypes.bool,
    };
    const watermarkValidate = validateProps(watermarkProps);
    const defaults = { hexo : true };
    const {
      hexo,
      ...attrs
    } = {
      ...defaults,
      ...props
    };
    watermarkValidate({hexo});

    const {prefix} = theme;

  p(
    class= `${prefix}-watermark`
  )
    if hexo
      | Powered by
      = " "
      a(
        href="https://hexo.io/"
        rel="external noreferrer"
        target="_blank"
      ) Hexo.

    |  Theme by
    = " "
    a(
      href="https://github.com/mulder21c"
      rel="external noreferrer"
      target="_blank"
    ) mulder21c.
